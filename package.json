{
  "name": "retroizer",
  "version": "1.0.0",
  "description": "Image processing tool with pixelization, dithering and other retro effects.",
  "main": "main.js",
  "homepage": "https://github.com/darokin/retroizer-app",
  "author": {
    "name": "Adrien Rebuzzi (darokin)",
    "email": "admin@darokin.info"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node build.js",
    "build:watch": "webpack --watch",
    "install:no-ssl": "npm install --strict-ssl=false --registry=https://registry.npmjs.org/",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl",
    "release": "npm run build && electron-builder --publish=always"
  },
  "build": {
    "appId": "com.darokin.retroizer",
    "productName": "Retroizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "index.html",
      "dist/**/*",
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "Retroizer",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "electron": "^37.2.6",
    "electron-builder": "^25.1.4",
    "sharp": "^0.34.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  }
}
